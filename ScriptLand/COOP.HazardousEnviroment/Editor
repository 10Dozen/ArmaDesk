B // Ученых сделать CIVILIAN в белых комбезах.

C // Имя "объекта" = dzn_bioweaponItem
D // Имя "Пусковой установки" = dzn_launchPod_1

E // "Зараженная зона"?
// Накидать триггеров повторяющихся на ВЕСТ ПРЕСЕНТ 
// в OnAct:
{[_x, thisTrigger] spawn dzn_deathZone;} forEach thisList;

F // Создать "говоруна" в рацию от лица штаба. Имя "говоруна" вписать в Init.sqf в константу dzn_c_radioMan = ""; //"голос" штаба


G // Триггеры окончания игры
theEndWin1
OnAct: 
Cond: !(isNil "dzn_missionResult") && { dzn_missionResult == "Win1" }
OnAct: [] spawn { sleep 18; "end2" call BIS_fnc_endMission; }

theEndWin2
OnAct: 
Cond: !(isNil "dzn_missionResult") && { dzn_missionResult == "Win2" }
OnAct:  [] spawn { sleep 18; "end3" call BIS_fnc_endMission;  }

theEndFail
Cond: !(isNil "dzn_missionResult") && { dzn_missionResult == "Failed" }
OnAct:  [] spawn { sleep 18; "end1" call BIS_fnc_endMission;  }

